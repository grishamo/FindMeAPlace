<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Background-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

    <!--Header-->
    <include
        android:id="@+id/Header"
        layout="@layout/header" />

    <!--Content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Header"
        android:orientation="vertical"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="30dp"
        tools:ignore="ObsoleteLayoutParam,RtlSymmetry">

        <com.example.grisha.findaplace.PlaceCategoryView
            android:id="@+id/myPlaces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openPlace"
            custom:categoryName="my_places"
            custom:imageBackgroundColor="#e1388cb1"
            custom:categoryIcon="1"
            custom:titleText="@string/my_places" />

        <com.example.grisha.findaplace.CustomTextView
            style="@style/PageTitle"
            android:layout_marginTop="30dp"
            android:text="@string/nearby_places" />

        <com.example.grisha.findaplace.CustomTextView
            android:layout_width="match_parent"
            android:alpha=".8"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:gravity="center"
            android:textAlignment="center"
            android:background="#bf000000"
            android:textColor="#f9faff60"
            android:layout_marginTop="30dp"
            android:text="UNDER CONSTRUCTION" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <LinearLayout
                android:id="@+id/nearbyPlacesContainer"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>