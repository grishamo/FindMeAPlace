<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Background-->
    <ImageView
        android:id="@+id/BackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

    <!--Header-->
    <include
        android:id="@+id/Header"
        layout="@layout/header" />

    <!--Form Content-->
    <ScrollView
        android:layout_below="@id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="2sp"
                android:background="#f9f9f9"
                android:gravity="center">

                <ImageView
                    android:id="@+id/PlaceImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <!--Form Title-->
                <com.example.grisha.findaplace.CustomTextView
                    android:id="@+id/PlaceTitle"
                    style="@style/PageTitle"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Place Title" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e8ffffff"
                android:paddingBottom="5dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/description"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PlaceDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="#e8ffffff"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="Some Place Description"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/SocialButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="#e8ffffff"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp">

                <Button
                    android:layout_margin="1dp"
                    android:id="@+id/callButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="CallPlaceClick"
                    android:background="@mipmap/ic_call" />

                <Button
                    android:id="@+id/weblinkButton"
                    android:layout_margin="1dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="OpenUrlClick"
                    android:background="@mipmap/ic_weblink"/>

                <Button
                    android:id="@+id/shareButton"
                    android:layout_margin="1dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="ShareClick"
                    android:background="@mipmap/ic_share"/>
            </LinearLayout>

            <!--Google Map-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#e8ffffff"
                android:padding="20dp">

                <fragment
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.example.grisha.findaplace.PlaceActivity" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>