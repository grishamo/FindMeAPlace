<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Background-->
    <ImageView
        android:id="@+id/BackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

    <!--Header-->
    <include
        android:id="@+id/Header"
        layout="@layout/header" />

    <!--Form Content-->
    <ScrollView
        android:layout_below="@id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/PlaceImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="2sp"
                android:background="#f9f9f9"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/place_img" />

                <!--Form Title-->
                <com.example.grisha.findaplace.CustomTextView
                    android:id="@+id/PlaceTitle"
                    style="@style/PageTitle"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="RAS SHITAN" />

                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="60dp"-->
                <!--android:src="@drawable/ic_add_a_photo"-->
                <!--android:alpha=".2"-->
                <!--android:layout_gravity="center"/>-->

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e8ffffff"
                android:paddingBottom="5dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="Description"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PlaceDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="#e8ffffff"
                android:gravity="left"
                android:lines="5"
                android:minHeight="100dp"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="This is version  of Lorem Ipsum. Proin gravida nibh vel velit auctor aliquet.
Aenean sollicitudin, lorem quis bibendum tincidunt auctor a ornare odio."
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/SocialButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="#e8ffffff"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/callButton"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:onClick="CallPlace"
                    android:text="C" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="W" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="S" />
            </LinearLayout>

            <!--Google Map-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#e8ffffff"
                android:padding="20dp">

                <fragment
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.example.grisha.findaplace.PlaceActivity" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>